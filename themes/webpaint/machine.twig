{% extends "base-with-aside.twig" %}

{% block content %}
  {{ content }}

  <h2>Caractéristiques techniques</h2>
  <p>
  {% for a, detail in meta.details %}
    {{ a }} : {{ detail | join(',') }}
    <br/>
  {% endfor %}
  </p>

  <div class="category-wrapper">
    <div class="category-info">
      <h3>Exemples</h3>
      <p>réalisations avec cette machine</p>
    </div>
    <div class="carousel-wrapper">
      <div class="touchcarousel touch-carousel">
        <ul class="touchcarousel-container">
          {% for exemple in meta.exemples %}
            <li class="touchcarousel-item item-block">
              <img src="{{ base_url }}{{ exemple.image }}" width="270" height="220" alt="" />
              <a href="{{ base_url }}{{ exemple.image }}" class="fancybox-media" rel="web-design" data-title-id="title-01"><span class="link"></span></a>
              <div id="title-01" class="info hidden">
                <h2>{{ exemple.title }}</h2>
                <div class="fancybody">{{ exemple.text }}</div>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
  <div class="clear"></div>

{% endblock %}

