{% extends "base-with-aside.twig" %}

{% block content %}
    <section class="content">
        <div class="grid-wrapper">
            <div class="blog-grid">
                {% for page in pages if page.id starts with current_page.id ~ "/" %}
                <div class="post">
                    <div class="overlay"><a href="{{ page.id }}"><img src="{{ base_url }}/{{ page.meta.image }}" alt="" /></a></div>
                    <div class="info">
                        <h2 class="post-title"><a href="{{ page.id }}">{{ page.title }}</a></h2>
                        {#<div class="meta"> <span>12 November 2013</span> <span class="sep">|</span> <span><a href="#">3 Comments</a></span> </div>#}
                    </div>
                    <p>{{ page.meta.abstract }}</p>
                    <a href="{{ page.id }}" class="more">Lire plus â†’</a> </div>
                <hr />
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}